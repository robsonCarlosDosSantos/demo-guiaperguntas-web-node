<%- include('./partials/navbar.ejs')%>
<body>
    <%- include('./partials/header.ejs')%>
    <div id="formulario-pergunta" class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/resposta">
            <h3>Responder</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite aqui sua resposta" class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas:</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo%>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('./partials/footer.ejs')%>